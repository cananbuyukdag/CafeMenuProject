@model EntityLayer.Concrete.User
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 0px 50px 20px 20px" class="form-group">
    <br />
    <h4>Kullanıcı Güncelleme</h4>
    @using (Html.BeginForm("UpdateUser", "AdminUser", FormMethod.Post))
    {
        @Html.Label("Id", new { @class = "text-bold" })
        @Html.TextBoxFor(x => x.UserId, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.Label("Ad", new { @class = "text-bold" });
        @Html.TextBoxFor(w => w.Name, new { @class = "form-control" });
        @Html.ValidationMessageFor(w => w.Name, "", new { @class = "text-danger" });
        <br />
        @Html.Label("Soyad", new { @class = "text-bold" });
        @Html.TextBoxFor(w => w.Surname, new { @class = "form-control" });
        @Html.ValidationMessageFor(w => w.Surname, "", new { @class = "text-danger" });
        <br />
        @Html.Label("Kullanıcı Adı", new { @class = "text-bold" });
        @Html.TextBoxFor(w => w.Username, new { @class = "form-control" });
        @Html.ValidationMessageFor(w => w.Username, "", new { @class = "text-danger" });
        <br />
        @Html.Label("Şifre", new { @class = "text-bold" });
        @Html.TextBoxFor(w => w.HashPassword, new { @class = "form-control" });
        <br />
        <button class="btn btn-info">Bilgileri Güncelle</button>
    }
